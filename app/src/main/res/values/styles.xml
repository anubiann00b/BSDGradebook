<resources>

    <style name="Theme.AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textViewStyle">@style/CustomTextView</item>
    </style>

    <style name="CustomTextView" parent="android:Widget.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/class_in</item>
        <item name="android:windowExitAnimation">@anim/class_out</item>
    </style>
    
    <style name="BorderlessButtonCustom" parent="Theme.AppCompat.Light.DarkActionBar">

    </style>
</resources>
